<%- include("partials/header"); %>
<h1>Home</h1>
<p><%= homeParagraph %></p>
<%posts.forEach(function(post) { %>
  <h1><%=post.postTitle%></h1>
 <% let body = post.postBody; %>
 <% if (body != null) { %>
   <% if (body.length > 100) { %>
    <%  body = body.slice(0, 100) + "..."; %>
  <%  } %>
 <% } %>
  <p>
    <%=body%>
    <% if (body != null) { %>
      <% if (body.length > 100) { %>
        <a href="/posts/<%=post.postTitle%>">Read More</a>
     <%  } %>
    <% } %>
  </p>
<%}); %>
<%- include("partials/footer"); %>